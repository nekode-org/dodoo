---
import Cabecera from "../components/Estructura/Cabecera.astro";
const { titulo } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{titulo}</title>
    </head>
    <body>
        <div class="hero">
            <Cabecera />
            <main>
                <slot />
            </main>
            <footer>
                <a href="/Aviso/index">Aviso de privacidad</a>
            </footer>
        </div>
    </body>
</html>

<style>
    
    body {
        margin: 0;
        font-family: poppins, sans-serif;
        background-color: #fff;
        height: 100%;
    }
    .hero {
        width: 100%;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }
    main {
        flex: 1;
    }
    footer {
        background-color: #f86404;
        height: 50px;
        width: 100%;
        bottom: 0;
        color: white;
        z-index: 10000;
    }

    a {
        text-decoration: none;
        color: white;
        font-weight: bold;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%;
        
    }

</style>
