---
import Iniciales from "../components/Formularios/Iniciales.jsx";
import PrincipalLayout from "../layouts/PrincipalLayout.astro";
import Info from "../components/Estructura/Info.astro";
---

<PrincipalLayout titulo="Inicio">
	<main class="primer">
		<Info />
		<Iniciales client:load />
	</main>
</PrincipalLayout>

<style>
	.primer {
		position: fixed;
		display: flex;
		justify-content: center;
		align-items: center;
		height: 100vh;
	}
	@media (max-width: 480px) {
		.primer {
			position: relative;
			flex-direction: column;
			width: 90%;
			height: auto;
			margin: auto;
		}
	}
</style>
